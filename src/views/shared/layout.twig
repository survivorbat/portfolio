<html lang="en">
  <head>
    {% block head %}
        <title>{% block title %}{{ layout.title }}{% endblock %}</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
        <meta name="author" content="{{ site.author }}">
        <meta name="description" content="The personal software development portfolio of Maarten van der Heijden. On this website you can find several contact links and a list of github projects.">
        <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
        <meta property="og:site_name" content="{{ site.name }}">
        <meta property="og:title" content="{{ site.name }}">
        <meta property="og:description" content="The personal software development portfolio of Maarten van der Heijden. On this website you can find several contact links and a list of github projects.">
        <meta property="og:type" content="website">
        <meta property="og:author" content="{{ site.author }}">
        <meta property="og:url" content="https://maarten.dev/">

        <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="favicon-16x16.png">
        <link rel="manifest" href="site.webmanifest">
        <link rel="mask-icon" href="safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#2b5797">
        <meta name="theme-color" content="#ffffff">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

        {% block stylesheets %}
            <link rel="stylesheet" href="/css/home/home.css">
        {% endblock %}
    {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block background %}
                <div class="page--background"></div>
            {% endblock %}
            <div class="container-fluid page--container">
                {% block container %}
                    {% block header %}
                        <header class="row justify-content-around page--header">
                            <div class="col-md-5">
                                <h1 class="header--title">{% block pageTitle %}Maarten van der Heijden{% endblock %}</h1>
                            </div>
                            <div class="col-md-6 header--nav">
                                {% include "nav.twig" %}
                            </div>
                        </header>
                    {% endblock %}
                    {% block content %}{% endblock %}
                    {% block footer %}
                        <footer class="row page--footer">
                            <div class="col-12">
                                <p></p>
                            </div>
                        </footer>
                    {% endblock %}
                {% endblock %}
            </div>
        {% endblock %}
    </body>
</html>